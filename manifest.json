{
  "manifest_version": 2,
  "version": "0.1.2",
  "name": "Work Offline",
  "description": "Brings work offline and online in the web page level to your browser",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  },

  "homepage_url": "http://add0n.com/work-offline.html",

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "*://*/*"
  ],

  "background": {
    "scripts": [
      "webext/utils/EventEmitter.js",
      "webext/core/base.js",
      "webext/core/chrome.storage.js",
      "webext/core/chrome.contextMenus.js",
      "webext/core/chrome.browserAction.js",
      "webext/core/chrome.runtime.js",
      "webext/core/chrome.tabs.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "applications": {
    "gecko": {
      "id": "{2936ba13-a63a-41cf-a4e5-79274a38379e}",
      "strict_min_version": "52.0"
    }
  }
}
